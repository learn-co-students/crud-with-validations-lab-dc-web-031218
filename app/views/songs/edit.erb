<% if @song.errors.any?  %>
<ul>
  <% @song.errors.full_messages.each do |message|  %>
    <li>
      <%= message %>
    </li>
  <% end  %>
</ul>
<% end  %>

<%= form_for @song do |f|%>
<%= f.label :title, 'Title' %>
<%= f.text_field :title %>
<br>
<%= f.label :released, 'Released?' %>
<%= f.check_box :released %>
<br>
<%= f.label :release_year, 'Release Year' %>
<%= f.number_field :release_year, {min: '1950', max: '2018'} %>
<br>
<%= f.label :artist_name, 'Artist Name' %>
<%= f.text_field :artist_name %>
<br>
<%= f.label :genre, 'Genre' %>
<%= f.text_field :genre %>
<br>
<%= f.submit %>
<% end  %>
